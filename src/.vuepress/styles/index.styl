@require '~vuepress-plugin-tabs/dist/themes/default.styl'
@require 'breakpoints.styl'
@require 'custom.styl'
@require 'code.styl'
@require 'darkmode.styl'

html
    background-color: initial
main.home,
.theme-default-content:not(.custom)
    max-width: 1140px
.navbar .site-name
    display: none
.content__default h1,
.content__default h2,
.content__default h3
    margin-left: -18px
.tabs-component-panels h3
    margin-left: 0
.sidebar
    width: 18rem
.page-nav,
.page-edit
    max-width: 100% !important
.page-nav .inner,
.page-edit div
    padding: 0 3rem
div[class*="language-"]
    overflow: visible !important
