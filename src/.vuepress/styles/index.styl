.intro table thead,
.intro table a span
    display: none
.multicolumn
    flex-direction: column !important
.theme-default-content
    code
        white-space: nowrap
    div[class*="language-"]
        code
            white-space: pre

+srb-gt-md()
    .multicolumn > .multicolumn-column:first-of-type
        margin-right: 1em
    .multicolumn > .multicolumn-column h3
        margin-left: 0
    .multicolumn
        flex-direction: row !important
        .multicolumn-column
            width: 0
            flex: 1 1 0 !important
            overflow: auto


// Hack for fixing page scroll when switching tabs
// https://github.com/pskordilakis/vuepress-plugin-tabs/issues/21
section.tabs-component-panel::before
    content: '';
    display: block;
    position: relative;
    width: 0;
    height: 12em;
    margin-top: -12em;

.sidebar-group.is-sub-group > .sidebar-heading:not(.clickable)
    opacity: 1 !important

.sidebar-group.is-sub-group > .sidebar-heading
    font-size: 1em  !important
    font-weight: 400
    display: inline-block
    color: #2c3e50 !important

    // &::before
    //     content: '- ';
    //     position: absolute;
    //     left: 1rem;

.home .hero .description
    max-width: 48ch !important
    font-family: "Fira Code", "Source Code Pro", Menlo, Monaco, Consolas, "Lucisa Console", monospace

a
    display: inline-block

.landing-page .theme-default-content
    width: 90%
    margin: auto

.code-copy
	position: absolute
	right: 0.25rem
	bottom: 0.25rem
